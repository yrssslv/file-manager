{
  "name": "file-manager-app",
  "version": "1.0.0",
  "description": "Interactive command-line file manager built with Node.js. Provides advanced file and directory operations via a user-friendly terminal interface using the readline library. Features include colored output with chalk, config customization, and modular command structure.",
  "type": "module",
  "main": "./dist/app.mjs",
  "types": "./dist/app.d.mts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "if not exist dist\\config mkdir dist\\config && copy src\\config\\config.json dist\\config\\config.json",
    "start": "npm run build && node dist/app.mjs",
    "dev": "tsx watch src/app.mts",
    "test": "node --test",
    "test:smoke": "tsx --test tests/smoke/*.test.mts",
    "test:edge-cases": "tsx --test tests/edge-cases/*.test.mts",
    "test:unit": "tsx --test tests/unit/*.test.mts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "clean": "powershell -Command \"Remove-Item -Path dist -Recurse -Force -ErrorAction SilentlyContinue\"",
    "prebuild:exe": "npm run build",
    "build:exe": "pkg dist/app.mjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output build/file-manager",
    "build:exe:win": "pkg dist/app.mjs --targets node18-win-x64 --output build/file-manager-win.exe",
    "build:exe:linux": "pkg dist/app.mjs --targets node18-linux-x64 --output build/file-manager-linux",
    "build:exe:mac": "pkg dist/app.mjs --targets node18-macos-x64 --output build/file-manager-macos"
  },
  "keywords": [
    "file-manager",
    "nodejs",
    "esm",
    "cli"
  ],
  "author": "yrssslv",
  "license": "ISC",
  "files": [
    "dist/",
    "README.md"
  ],
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/node": "^24.10.0",
    "eslint": "^9.14.0",
    "pkg": "^5.8.1",
    "prettier": "^3.3.3",
    "tsx": "^4.20.6"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "src/config/**/*"
    ],
    "outputPath": "build"
  }
}
